<div class="flex items-center hover:bg-gray-100 -mx-8 px-6 py-5">
  <div class="flex w-2/5">
    <div class="w-20">
      <img class="h-24" src="{{@product.image}}" alt="{{@product.name}}" />
    </div>
    <div class="flex flex-col justify-between ml-4 flex-grow">
      <span class="font-bold text-sm">
        {{@product.name}}
      </span>
      <a
        href="#"
        class="font-semibold hover:text-red-500 text-gray-500 text-xs"
        {{on 'click' (fn this.clearItem @product.id)}}
      >
        Remove
      </a>
    </div>
  </div>
  <div class="flex justify-center w-1/5">
    <input
      class="mx-2 border text-center w-8"
      type="text"
      value="{{@product.quantity}}"
      disabled
    />
  </div>
  <span class="text-center w-1/5 font-semibold text-sm">
    {{currency-parser @product.total @product.currency}}
  </span>
  <span class="text-center w-1/5 font-semibold text-sm">
    {{currency-parser @product.discount @product.currency}}
  </span>
  <span class="text-center w-1/5 font-semibold text-sm">
    {{currency-parser this.totalCost}}
  </span>
</div>